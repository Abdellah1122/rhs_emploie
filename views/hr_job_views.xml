            <field name="doc_aptitude"/>
            <field name="doc_radiologie"/>
          </group>
        </group>
      </xpath>
    </field>
  </record>

  <!-- 2) Main form: Enhanced with contract and documents in organized sections -->
  <record id="rhs_job_form_inherit" model="ir.ui.view">
    <field name="name">rhs.job.form.inherit.rhs_emploi</field>
    <field name="model">hr.job</field>
    <field name="inherit_id" ref="hr.view_hr_job_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet/notebook/page[1]" position="inside">
        <!-- Main RH Information Section -->
        <group class="o_subsection o_group_col_2 mt-4" string="Informations RH" style="gap: 1rem;">
          <field name="request_date" widget="date" class="mb-3"/>
          <field name="deadline_date" widget="date" class="mb-3"/>
          <field name="status" class="mb-3"/>
          <field name="experience" class="mb-3"/>
          <field name="language" class="mb-3"/>
          <field name="city" class="mb-3"/>
          <field name="activity_domain" class="mb-3"/>
          <field name="type_contrat" class="mb-3"/>
        </group>

        <!-- Contract Details Section -->
        <group class="o_subsection mt-4" string="DÃ©tails du contrat" style="background: #f8f9fa; padding: 15px; border-radius: 8px;">
          <div class="row">
            <div class="col-6">
              <field name="nbr_jours_restants" readonly="1" 
                     invisible="deadline_date == False"
                     string="Jours restants"/>
            </div>
            <div class="col-6" invisible="type_contrat != 'interim'">
              <field name="documents_required_interim" readonly="1" 
                     widget="text" string="Documents requis"/>
            </div>
          </div>
        </group>

        <!-- Documents Requirements Section - Only for Interim -->
        <group class="o_subsection mt-4" string="Documents requis pour candidature" 
               invisible="type_contrat != 'interim'"
               style="background: #fff8dc; padding: 15px; border-radius: 8px; border-left: 4px solid #ffc107;">
          
          <div class="alert alert-info" style="margin-bottom: 15px;">
            <strong>ðŸ“‹ Documents Ã  demander au candidat:</strong>
            <p class="mb-0">Cochez les documents que le candidat devra fournir lors de son embauche.</p>
          </div>

          <!-- Personal Documents -->
          <group string="Documents personnels" col="2">
            <field name="copy_cin"/>
            <field name="doc_rib"/>
            <field name="doc_cv"/>
            <field name="doc_photos"/>
          </group>

          <!-- Professional Documents -->
          <group string="Documents professionnels" col="2">
            <field name="doc_cnss"/>
            <field name="doc_diplomes"/>
            <field name="doc_attestations"/>
          </group>

          <!-- Medical Documents -->
          <group string="Documents mÃ©dicaux" col="2">
            <field name="doc_anthropometrique"/>
            <field name="doc_aptitude"/>
            <field name="doc_radiologie"/>
          </group>
        </group>
      </xpath>
    </field>
  </record>

  <!-- 3) Tree/List view: Enhanced with new fields -->
  <record id="rhs_job_tree_inherit" model="ir.ui.view">
    <field name="name">rhs.job.tree.inherit.rhs_emploi</field>
    <field name="model">hr.job</field>
    <field name="inherit_id" ref="hr.view_hr_job_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//tree" position="inside">
        <field name="request_date" string="Date demande"/>
        <field name="deadline_date" string="Ã‰chÃ©ance"/>
        <field name="nbr_jours_restants" string="Jours restants" 
               decoration-danger="nbr_jours_restants &lt; 0"
               decoration-warning="nbr_jours_restants &lt;= 7 and nbr_jours_restants &gt;= 0"
               decoration-success="nbr_jours_restants &gt; 30"/>
        <field name="status" string="Statut"/>
        <field name="type_contrat" string="Type contrat"/>
        <field name="experience" string="ExpÃ©rience"/>
        <field name="language" string="Langue"/>
        <field name="city" string="Ville"/>
        <field name="activity_domain" string="Domaine"/>
      </xpath>
    </field>
  </record>

  <!-- 4) Search/Filter view: Enhanced filters -->
  <record id="rhs_job_search_inherit" model="ir.ui.view">
    <field name="name">rhs.job.search.inherit.rhs_emploi</field>
    <field name="model">hr.job</field>
    <field name="inherit_id" ref="hr.view_job_filter"/>
    <field name="arch" type="xml">
      <xpath expr="//search" position="inside">
        <!-- Additional search fields -->
        <field name="type_contrat"/>
        <field name="status"/>
        <field name="city"/>
        <field name="activity_domain"/>
        
        <!-- Enhanced filters -->
        <separator/>
        <filter string="Contrats IntÃ©rim" name="filter_interim" 
                domain="[('type_contrat', '=', 'interim')]"/>
        <filter string="Postes Urgents" name="filter_urgent" 
                domain="[('nbr_jours_restants', '&lt;=', 7), ('nbr_jours_restants', '&gt;=', 0)]"/>
        <filter string="Postes en Retard" name="filter_overdue" 
                domain="[('nbr_jours_restants', '&lt;', 0)]"/>
        <filter string="Postes Ouverts" name="filter_open" 
                domain="[('status', '=', 'ouvert')]"/>
        
        <!-- Group by options -->
        <separator/>
        <group expand="0" string="Grouper par">
          <filter string="Type de contrat" name="group_contract_type" 
                  context="{'group_by': 'type_contrat'}"/>
          <filter string="Statut" name="group_status" 
                  context="{'group_by': 'status'}"/>
          <filter string="Ville" name="group_city" 
                  context="{'group_by': 'city'}"/>
          <filter string="Domaine d'activitÃ©" name="group_domain" 
                  context="{'group_by': 'activity_domain'}"/>
        </group>
      </xpath>
    </field>
  </record>

  <!-- 5) Enhanced form view for documents management -->
  <record id="rhs_job_documents_form" model="ir.ui.view">
    <field name="name">rhs.job.documents.form.rhs_emploi</field>
    <field name="model">hr.job</field>
    <field name="inherit_id" ref="hr.view_hr_job_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet/notebook" position="inside">
        <!-- New Documents Tab -->
        <page string="Documents &amp; Contrat" name="documents_contract">
          <group>
            <!-- Contract Information -->
            <group string="Informations Contrat" col="2">
              <field name="type_contrat" widget="selection" 
                     options="{'no_create': True, 'no_edit': True}"/>
              <field name="nbr_jours_restants" readonly="1" 
                     invisible="deadline_date == False"/>
            </group>

            <!-- Documents Checklist for Interim -->
            <group string="Liste des documents requis" 
                   invisible="type_contrat != 'interim'">
              
              <div class="alert alert-warning" style="margin: 10px 0;">
                <h5>ðŸ“‹ Documents de candidature (IntÃ©rim)</h5>
                <p>SÃ©lectionnez les documents que le candidat devra obligatoirement fournir :</p>
              </div>

              <!-- Organized document sections -->
              <notebook>
                <page string="Documents IdentitÃ©" name="identity_docs">
                  <group col="1">
                    <field name="copy_cin" string="âœ“ 2 copies CIN lÃ©galisÃ©es"/>
                    <field name="doc_photos" string="âœ“ 4 Photos d'identitÃ© rÃ©centes"/>
                    <field name="doc_cv" string="âœ“ Curriculum Vitae"/>
                  </group>
                </page>

                <page string="Documents Professionnels" name="professional_docs">
                  <group col="1">
                    <field name="doc_cnss" string="âœ“ Attestation d'affiliation Ã  la CNSS"/>
                    <field name="doc_diplomes" string="âœ“ Copies des diplÃ´mes et/ou certificats"/>
                    <field name="doc_attestations" string="âœ“ Attestations de stage et/ou de travail"/>
                    <field name="doc_rib" string="âœ“ RIB bancaire"/>
                  </group>
                </page>

                <page string="Documents MÃ©dicaux" name="medical_docs">
                  <group col="1">
                    <field name="doc_anthropometrique" string="âœ“ Fiche anthropomÃ©trique"/>
                    <field name="doc_aptitude" string="âœ“ Fiche d'aptitude mÃ©dicale"/>
                    <field name="doc_radiologie" string="âœ“ Radiologie pulmonaire"/>
                  </group>
                </page>
              </notebook>

              <!-- Summary -->
              <group string="RÃ©capitulatif">
                <field name="documents_required_interim" readonly="1" 
                       widget="text" nolabel="1" 
                       style="background: #f8f9fa; padding: 10px; border-radius: 5px;"/>
              </group>
            </group>
          </group>
        </page>
      </xpath>
    </field>
  </record>

  <!-- 6) Client Sidebar: Show DEPARTMENTS but label as CLIENTS -->
  <record id="hr_job_search_with_client_panel" model="ir.ui.view">
    <field name="name">hr.job.search.client.panel</field>
    <field name="model">hr.job</field>
    <field name="inherit_id" ref="hr.view_job_filter"/>
    <field name="arch" type="xml">
      <xpath expr="//searchpanel" position="replace">
        <searchpanel>
          <field name="department_id" string="CLIENTS" icon="fa-building"/>
        </searchpanel>
      </xpath>
    </field>
  </record>

  <!-- 7) Enhanced Kanban: Minimalist Modern Design with Red Accents -->
  <record id="rhs_job_kanban_with_status" model="ir.ui.view">
    <field name="name">hr.job.kanban.with.status.rhs_emploi</field>
    <field name="model">hr.job</field>
    <field name="inherit_id" ref="hr_recruitment.view_hr_job_kanban"/>
    <field name="arch" type="xml">

      <!-- Enhanced kanban attributes -->
      <xpath expr="//kanban" position="attributes">
        <attribute name="class">o_kanban_dashboard o_hr_recruitment_kanban minimalist_modern_kanban</attribute>
        <attribute name="on_create">hr_recruitment.create_job_simple</attribute>
        <attribute name="sample">1</attribute>
        <attribute name="limit">40</attribute>
        <attribute name="action">%(hr_recruitment.action_hr_job_applications)d</attribute>
        <attribute name="type">action</attribute>
      </xpath>

      <!-- Add all required fields -->
      <xpath expr="//kanban" position="inside">
        <!-- Original core fields -->
        <field name="active"/>
        <field name="name"/>
        <field name="alias_email"/>
        <field name="is_favorite"/>
        <field name="department_id"/>
        <field name="no_of_recruitment"/>
        <field name="color"/>
        <field name="new_application_count"/>
        <field name="no_of_hired_employee"/>
        <field name="manager_id"/>
        <field name="user_id"/>
        <field name="application_count"/>
        <field name="all_application_count"/>
        <field name="activities_today"/>
        <field name="activities_overdue"/>
        <field name="company_id"/>
        <field name="alias_id"/>
        
        <!-- Custom enhanced fields -->
        <field name="request_date"/>
        <field name="deadline_date"/>
        <field name="status"/>
        <field name="experience"/>
        <field name="language"/>
        <field name="city"/>
        <field name="activity_domain"/>
        <field name="nbr_jours_restants"/>
        <field name="type_contrat"/>
      </xpath>

      <!-- Add the original kanban-menu template -->
      <xpath expr="//templates" position="inside">
        <t t-name="kanban-menu" groups="hr_recruitment.group_hr_recruitment_user">
          <div class="container">
            <div class="row">
              <div class="col-6 o_kanban_card_manage_section">
                <h5 role="menuitem" class="o_kanban_card_manage_title">
                  <span>View</span>
                </h5>
                <div role="menuitem" name="menu_view_applications">
                  <a name="%(hr_recruitment.action_hr_job_applications)d" type="action">Applications</a>
                </div>
                <div role="menuitem">
                  <a name="action_open_activities" type="object">Activities</a>
                </div>
                <div role="menuitem">
                  <a name="%(hr_recruitment.action_hr_job_sources)d" type="action" context="{'default_job_id': id}">Trackers</a>
                </div>
              </div>
              <div class="col-6 o_kanban_card_manage_section">
                <h5 role="menuitem" class="o_kanban_card_manage_title">
                  <span>New</span>
                </h5>
                <div role="menuitem" name="menu_new_applications">
                  <a name="%(hr_recruitment.action_hr_applicant_new)d" type="action">Application</a>
                </div>
              </div>
              <div class="col-6 o_kanban_card_manage_section">
                <h5 role="menuitem" class="o_kanban_card_manage_title">
                  <span>Reporting</span>
                </h5>
                <div role="menuitem" name="o_kanban_job_reporting">
                  <a name="%(hr_recruitment.action_hr_recruitment_report_filtered_job)d" type="action">Analysis</a>
                </div>
              </div>
            </div>
            <div class="o_kanban_card_manage_settings row">
              <div class="col-6" role="menuitem" aria-haspopup="true">
                <ul class="oe_kanban_colorpicker" data-field="color" role="popup"/>
              </div>
              <div class="col-6" role="menuitem">
                <a class="dropdown-item" t-if="widget.editable" name="edit_job" type="edit">Configuration</a>
                <a class="dropdown-item" t-if="record.active.raw_value" name="toggle_active" type="object">Archive</a>
                <a class="dropdown-item" t-if="!record.active.raw_value" name="toggle_active" type="object">Unarchive</a>
              </div>
            </div>
          </div>
        </t>
      </xpath>

      <!-- Clean minimalist kanban card template with all original functionality -->
      <xpath expr="//t[@t-name='kanban-box']" position="replace">
        <t t-name="kanban-box">
          <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} minimalist-card"
               style="background: #ffffff;
                      border: 1px solid #f3f4f6;
                      border-radius: 18px;
                      box-shadow: 0 2px 8px rgba(220, 38, 38, 0.04), 0 1px 3px rgba(0, 0, 0, 0.02);
                      transition: all 0.3s ease;
                      overflow: hidden;
                      position: relative;
                      margin: 24px;
                      min-height: 240px;">

            <!-- Clean status indicator with red accent -->
            <t t-set="status_value" t-value="record.status and record.status.raw_value or ''"/>
            <div t-attf-style="position: absolute;
                              top: 0;
                              left: 0;
                              right: 0;
                              height: 3px;
                              background: #{status_value == 'ouvert' ? '#dc2626' : 
                                          status_value == 'en_cours' ? '#f97316' : 
                                          status_value == 'cloture' ? '#6b7280' : 
                                          status_value == 'annule' ? '#991b1b' : '#dc2626'};"></div>

            <!-- Original kanban card header with modern styling -->
            <div class="o_kanban_card_header d-flex align-items-baseline gap-1" style="padding: 20px 20px 12px;">
              <field name="is_favorite" widget="boolean_favorite" nolabel="1" 
                     style="color: #dc2626; font-size: 1.1rem;"/>
              
              <div class="o_kanban_card_header_title" style="flex: 1;">
                <div class="o_primary">
                  <h3 style="color: #111827;
                             font-weight: 600;
                             font-size: 1.15rem;
                             line-height: 1.4;
                             margin: 0;
                             letter-spacing: -0.025em;">
                    <span><t t-esc="record.name.value"/>
                      <span t-if="record.activity_domain.value" 
                            style="color: #6b7280; font-weight: 400; font-size: 1rem;">
                        / <t t-esc="record.activity_domain.value"/>
                      </span>
                    </span>
                  </h3>
                </div>
                <div class="text-muted" style="margin-top: 4px;">
                  <field name="user_id"/>
                </div>
                <div class="o_secondary" groups="base.group_multi_company" style="margin-top: 2px;">
                  <small><i class="fa fa-building-o" role="img" aria-label="Company" title="Company"></i> <field name="company_id"/></small>
                </div>
                <div t-if="record.alias_email.value" class="o_secondary o_job_alias" style="margin-top: 2px;">
                  <small><i class="fa fa-envelope-o" role="img" aria-label="Alias" title="Alias"></i> <field name="alias_id"/></small>
                </div>
              </div>

              <!-- Urgency indicator -->
              <t t-set="days_remaining" t-value="record.nbr_jours_restants and record.nbr_jours_restants.raw_value"/>
              <div t-if="days_remaining !== undefined" 
                   t-attf-class="urgency-pill #{days_remaining &lt; 0 ? 'overdue' : days_remaining &lt;= 7 ? 'urgent' : 'normal'}"
                   t-attf-style="padding: 4px 10px;
                                 border-radius: 12px;
                                 font-size: 0.7rem;
                                 font-weight: 600;
                                 background: #{days_remaining &lt; 0 ? '#fee2e2' : days_remaining &lt;= 7 ? '#fef3c7' : '#fef7f7'};
                                 color: #{days_remaining &lt; 0 ? '#dc2626' : days_remaining &lt;= 7 ? '#d97706' : '#dc2626'};
                                 border: 1px solid #{days_remaining &lt; 0 ? '#fecaca' : days_remaining &lt;= 7 ? '#fed7aa' : '#fecaca'};">
                <t t-esc="record.nbr_jours_restants.value"/>j
              </div>
            </div>

            <!-- Status badge -->
            <div style="padding: 0 20px 12px;">
              <span t-attf-style="display: inline-flex;
                                 align-items: center;
                                 gap: 6px;
                                 padding: 5px 12px;
                                 border-radius: 16px;
                                 font-size: 0.7rem;
                                 font-weight: 500;
                                 background: #{status_value == 'ouvert' ? '#fef2f2' : 
                                             status_value == 'en_cours' ? '#fff7ed' : 
                                             status_value == 'cloture' ? '#f9fafb' : 
                                             status_value == 'annule' ? '#fef1f1' : '#fef2f2'};
                                 color: #{status_value == 'ouvert' ? '#dc2626' : 
                                         status_value == 'en_cours' ? '#ea580c' : 
                                         status_value == 'cloture' ? '#6b7280' : 
                                         status_value == 'annule' ? '#991b1b' : '#dc2626'};
                                 border: 1px solid #{status_value == 'ouvert' ? '#fecaca' : 
                                                    status_value == 'en_cours' ? '#fed7aa' : 
                                                    status_value == 'cloture' ? '#e5e7eb' : 
                                                    status_value == 'annule' ? '#fca5a5' : '#fecaca'};">
                <div t-attf-style="width: 5px;
                                   height: 5px;
                                   border-radius: 50%;
                                   background: #{status_value == 'ouvert' ? '#dc2626' : 
                                               status_value == 'en_cours' ? '#ea580c' : 
                                               status_value == 'cloture' ? '#6b7280' : 
                                               status_value == 'annule' ? '#991b1b' : '#dc2626'};"></div>
                <t t-esc="record.status and record.status.value or 'N/A'"/>
              </span>
            </div>

            <!-- Info grid -->
            <div style="padding: 0 20px 16px;">
              <div style="display: grid; 
                          grid-template-columns: 1fr 1fr; 
                          gap: 8px 16px;">
                
                <!-- Request Date -->
                <div>
                  <div style="color: #6b7280; font-size: 0.65rem; font-weight: 500; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 2px;">
                    Date demande
                  </div>
                  <div style="color: #111827; font-size: 0.75rem; font-weight: 500;">
                    <t t-esc="record.request_date and record.request_date.value or '-'"/>
                  </div>
                </div>

                <!-- Deadline -->
                <div>
                  <div style="color: #dc2626; font-size: 0.65rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 2px;">
                    Ã‰chÃ©ance
                  </div>
                  <div style="color: #dc2626; font-size: 0.75rem; font-weight: 600;">
                    <t t-esc="record.deadline_date and record.deadline_date.value or '-'"/>
                  </div>
                </div>

                <!-- Experience -->
                <div>
                  <div style="color: #6b7280; font-size: 0.65rem; font-weight: 500; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 2px;">
                    ExpÃ©rience
                  </div>
                  <div style="color: #111827; font-size: 0.75rem; font-weight: 500;">
                    <t t-esc="record.experience and record.experience.value or '-'"/>
                  </div>
                </div>

                <!-- City -->
                <div>
                  <div style="color: #6b7280; font-size: 0.65rem; font-weight: 500; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 2px;">
                    Ville
                  </div>
                  <div style="color: #111827; font-size: 0.75rem; font-weight: 500;">
                    <t t-esc="record.city and record.city.value or '-'"/>
                  </div>
                </div>
              </div>
            </div>

            <!-- Original recruitment job container with modern styling -->
            <div class="container o_recruitment_job_container o_kanban_card_content mt-0 mt-sm-3" style="padding: 0 20px 16px;">
              <div class="row">
                <div class="col-7">
                  <button class="btn btn-primary" 
                          name="%(hr_recruitment.action_hr_job_applications)d" 
                          type="action"
                          style="background: linear-gradient(135deg, #dc2626, #b91c1c);
                                 border: none;
                                 border-radius: 12px;
                                 padding: 8px 14px;
                                 font-size: 0.75rem;
                                 font-weight: 500;
                                 transition: all 0.2s ease;
                                 box-shadow: 0 2px 4px rgba(220, 38, 38, 0.2);">
                    <field name="new_application_count"/> New Applications
                  </button>
                </div>
                
                <ul class="col-5 o_job_activities" style="list-style: none; padding: 0; margin: 0; font-size: 0.75rem;">
                  <li style="margin-bottom: 2px;">
                    <a name="edit_job" type="edit" 
                       t-attf-class="{{ record.no_of_recruitment.raw_value > 0 ? 'text-primary fw-bolder' : 'text-secondary' }}" 
                       groups="hr_recruitment.group_hr_recruitment_user">
                      <field name="no_of_recruitment"/> To Recruit
                    </a>
                    <span t-attf-class="{{ record.no_of_recruitment.raw_value > 0 ? 'text-primary fw-bolder' : 'text-secondary' }}" 
                          groups="!hr_recruitment.group_hr_recruitment_user">
                      <field name="no_of_recruitment"/> To Recruit
                    </span>
                  </li>
                  <li t-if="record.application_count.raw_value > 0" style="margin-bottom: 2px;">
                    <field name="application_count"/> Applications
                  </li>
                  <li class="text-warning" t-if="record.activities_today.raw_value > 0" style="margin-bottom: 2px;">
                    <a name="action_open_today_activities" type="object" class="text-warning">
                      <field name="activities_today"/> Activities Today
                    </a>
                  </li>
